<?php
/**
 * @see Metrilo\Analytics\Block\Analytics
 */
$event           = $block->getEvent();
$url             = $block->getLibraryUrl();
$addToCartEvents = $block->getCartEvents()->getSessionEvents('metrilo_add_to_cart');
?>
<script type="text/javascript">
    require(['<?php echo $url; ?>'], function(){
        <?php if($addToCartEvents){
            foreach($addToCartEvents as $event) {
                echo "metrilo.addToCart('" . $event['productId'] . "', " . $event['quantity'] . ");";
            }
        } ?>
        <?php if($event){ echo $event; } ?>
    });
</script>
