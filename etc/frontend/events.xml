 *
 * @author Miroslav Petrov <miro91tn@gmail.com>
 */
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="customer_login">
        <observer name="metrilo_identify_customer_login" instance="Metrilo\Analytics\Observer\IdentifyUser" />
    </event>
    <event name="customer_account_edited">
        <observer name="metrilo_event_customer_update" instance="Metrilo\Analytics\Observer\Customer" />
        <observer name="metrilo_identify_customer_update" instance="Metrilo\Analytics\Observer\IdentifyUser" />
    </event>
    <event name="customer_register_success">
        <observer name="metrilo_event_customer_create" instance="Metrilo\Analytics\Observer\Customer" />
    </event>
    <event name="checkout_cart_product_add_after">
        <observer name="metrilo_event_addtocart" instance="Metrilo\Analytics\Observer\AddToCart" />
    </event>
    <event name="sales_quote_remove_item">
        <observer name="metrilo_event_removefromcart" instance="Metrilo\Analytics\Observer\RemoveFromCart" />
    </event>
</config>
